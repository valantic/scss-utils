  "repository": {
    "type": "git",
    "url": "git@github.com:valantic/scss-utils.git"
  },
  "engines": {
    "node": ">=22 <25",
    "npm": ">=10 <12"
  },
  "keywords": [
    "scss",
    "valantic"
  ],
  "author": "valantic CEC",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/valantic/scss-utils/issues"
  },
  "homepage": "https://github.com/valantic/scss-utils",
  "devDependencies": {
    "sass": "~1.93.2",
    "stylelint": "~16.24.0",
    "stylelint-config-valantic": "~9.1.0"
  }
}
